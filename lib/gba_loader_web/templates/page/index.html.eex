<div class="jumbotron">
  <h2><%= gettext "Welcome to %{name}!", name: "GBA LOADER" %></h2>
  <%= form_for @conn, "upload", [as: :upload, multipart: true], fn f -> %>
    <div class="form-group">
      <label>GBA Binary</label>
      <%= file_input f, :upload, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
